block content
	body.push(data-spy="scroll", data-target=".navbar-fixed-top")
	#container
		include ../_partials/_nav-main
		.bg-img
		canvas#fireflies
		//
			section
				header.intro
					.intro-body
						.container
						.row
							.col-md-8.col-md-offset-2
